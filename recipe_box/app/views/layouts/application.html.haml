!!! 5
%html
%head
	%title Recipe App
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-tr    ack' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body
	%nav.navbar.navbar-default
		.container
			.navbar-brand= link_to "레시피", root_path
			
			- if user_signed_in?	
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Recipe", new_recipe_path
					%li= link_to "로그아웃", destroy_user_session_path, method: :delete
			- else
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "회원가입", new_user_registration_path
					%li= link_to "로그인", new_user_session_path

	.container
		- flash.each do |name,msg|
			= content_tag :div, msg, class: "alert"

		= yield

